   	public function addMarquer(e : MapMouseEvent) : void
   	{
   		if(!newMarker)
   		{
	        newMarker = new Marker(e.latLng,new MarkerOptions({draggable: true}));
	        map0.addOverlay(newMarker);
     	}
   	}
   	
	]]>
